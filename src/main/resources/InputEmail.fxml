<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pidev3a8.controllers.Auth.PasswordResetController">
    <Label text="Réinitialisation de mot de passe" styleClass="title-label"/>
    <Label text="Entrez votre adresse e-mail pour recevoir un token de réinitialisation :"/>
    <TextField fx:id="emailField" promptText="Adresse e-mail"/>
    <Button text="Demander un token" onAction="#handleRequestToken" styleClass="button"/>
    <Label fx:id="errorMessage" textFill="RED" visible="false"/>
</VBox>