<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EventStatisticController" prefWidth="650" prefHeight="300" stylesheets="@Styles/Style1.css" >

    <!-- Labels pour l'événement -->
    <Label fx:id="eventTitle" layoutX="20" layoutY="20" text="Titre de l'événement" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="capacityLabel" layoutX="20" layoutY="60" text="Capacité :" style="-fx-font-size: 14px;" />
    <Label fx:id="participantsCount" layoutX="20" layoutY="90" text="Nombre de participants :" style="-fx-font-size: 14px;" />
    <Label fx:id="statusLabel" layoutX="20" layoutY="120" text="Statut :" style="-fx-font-size: 14px;" />

    <!-- PieChart correctement positionné et dimensionné -->
    <PieChart fx:id="participationChart" layoutX="200" layoutY="50" prefHeight="300" prefWidth="400" />

</AnchorPane>
