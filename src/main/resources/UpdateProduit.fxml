<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionBoutiqueONLINE.controllers.UpdateProduitController">
    <children>
        <Label layoutX="50.0" layoutY="40.0" text="Nom du produit:" style="-fx-text-fill: #10888D;" />
        <TextField fx:id="NomTextField" layoutX="180.0" layoutY="40.0" style="-fx-border-color: #F45E0C;" />

        <Label layoutX="50.0" layoutY="90.0" text="Prix:" style="-fx-text-fill: #10888D;" />
        <TextField fx:id="PrixTextField" layoutX="180.0" layoutY="90.0" style="-fx-border-color: #F45E0C;" />

        <Label layoutX="50.0" layoutY="140.0" text="Quantité:" style="-fx-text-fill: #10888D;" />
        <TextField fx:id="QuantiteTextField" layoutX="180.0" layoutY="140.0" style="-fx-border-color: #F45E0C;" />

        <Label layoutX="50.0" layoutY="190.0" text="Description:" style="-fx-text-fill: #10888D;" />
        <TextField fx:id="DescriptionTextField" layoutX="180.0" layoutY="190.0" style="-fx-border-color: #F45E0C;" />

        <ImageView fx:id="ImageViewProduit" layoutX="400.0" layoutY="40.0" fitWidth="120" fitHeight="120" />

        <Button layoutX="400.0" layoutY="180.0" text="Changer Image" onAction="#AjouterImageAction" style="-fx-background-color: #F45E0C; -fx-text-fill: #FFFFFF;" />


        <Button layoutX="180.0" layoutY="250.0" text="Mettre à jour" onAction="#UpdateAction" style="-fx-background-color: #10888D; -fx-text-fill: #FFFFFF;" />
    </children>
</AnchorPane>