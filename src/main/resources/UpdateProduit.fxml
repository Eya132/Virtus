<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionBoutiqueONLINE.controllers.UpdateProduitController">
    <children>
        <Label layoutX="50.0" layoutY="40.0" style="-fx-text-fill: #10888D;" text="Nom du produit:">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="NomTextField" layoutX="180.0" layoutY="40.0" style="-fx-border-color: #F45E0C;" />

        <Label layoutX="50.0" layoutY="90.0" style="-fx-text-fill: #10888D;" text="Prix en TND:">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="PrixTextField" layoutX="180.0" layoutY="90.0" style="-fx-border-color: #F45E0C;" />

        <Label layoutX="50.0" layoutY="140.0" style="-fx-text-fill: #10888D;" text="Quantité:">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="QuantiteTextField" layoutX="180.0" layoutY="140.0" style="-fx-border-color: #F45E0C;" />

        <Label layoutX="50.0" layoutY="190.0" style="-fx-text-fill: #10888D;" text="Description:">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="DescriptionTextField" layoutX="180.0" layoutY="190.0" style="-fx-border-color: #F45E0C;" />

        <ImageView fx:id="ImageViewProduit" fitHeight="120" fitWidth="120" layoutX="400.0" layoutY="40.0" />

        <Button layoutX="400.0" layoutY="180.0" onAction="#AjouterImageAction" style="-fx-background-color: #F45E0C; -fx-text-fill: #FFFFFF;" text="Changer Image">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Button>


        <Button layoutX="180.0" layoutY="250.0" onAction="#UpdateAction" style="-fx-background-color: #10888D; -fx-text-fill: #FFFFFF;" text="Mettre à jour">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Button>
    </children>
</AnchorPane>
