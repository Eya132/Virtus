<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionBoutiqueONLINE.controllers.ConsulterCommandeClientController">

    <TableView fx:id="tableCommandes" prefWidth="800" prefHeight="400">
        <columns>
            <!-- Colonne pour l'image du produit -->
            <TableColumn fx:id="colImage" text="Produit" />

            <!-- Colonne pour le nom du produit -->
            <TableColumn fx:id="colNomProduit" text="Nom du produit" />

            <!-- Colonne pour la date de la commande -->
            <TableColumn fx:id="colDateCommande" text="Date de la commande" />

            <!-- Colonne pour le statut de la commande -->
            <TableColumn fx:id="colStatus" text="Statut" />

            <!-- Colonne pour la quantité commandée -->
            <TableColumn fx:id="colQuantite" text="Quantité" />

            <!-- Colonne pour les actions (Modifier et Supprimer) -->
            <TableColumn fx:id="colActions" text="Actions" />
        </columns>
    </TableView>
</VBox>
