<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pidev3a8.controllers.Dashbord.DashboardAdmController" stylesheets="css/style1.css">
    <!-- Navbar en haut -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #404040; -fx-padding: 10; -fx-spacing: 20;">
            <!-- ToggleGroup pour les boutons du navbar -->
            <fx:define>
                <ToggleGroup fx:id="navbarToggleGroup" />
            </fx:define>

            <!-- Bouton "Liste Utilisateurs" -->
            <ToggleButton text="Liste Utilisateurs" toggleGroup="$navbarToggleGroup" onAction="#handleListUsers" styleClass="navbar-button"  />

            <!-- Bouton "Validation des Nutritionnistes" -->
            <ToggleButton text="Validation des Nutritionnistes" toggleGroup="$navbarToggleGroup" onAction="#handleValidationNut" styleClass="navbar-button" />
        </HBox>
    </top>

    <!-- Contenu dynamique au centre -->
    <center>
        <StackPane fx:id="contentPane" />
    </center>
</BorderPane>