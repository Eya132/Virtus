<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" stylesheets="Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionBoutiqueONLINE.controllers.AjouterProduitController">
    <children>
        <!-- Champ pour le nom du produit -->
        <Label layoutX="50.0" layoutY="40.0" style="-fx-text-fill: #10888D;" text="Nom du produit:">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Label>

        <TextField fx:id="NomTextField" layoutX="180.0" layoutY="40.0" prefHeight="27.0" prefWidth="198.0" style="-fx-border-color: #F45E0C;" />

        <!-- Champ pour le prix -->
        <Label layoutX="50.0" layoutY="90.0" style="-fx-text-fill: #10888D;" text="Prix en TND:">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="PrixTextField" layoutX="180.0" layoutY="90.0" prefHeight="27.0" prefWidth="198.0" style="-fx-border-color: #F45E0C;" />

        <!-- Champ pour la quantité -->
        <Label layoutX="50.0" layoutY="140.0" style="-fx-text-fill: #10888D;" text="Quantité:">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="QuantiteTextField" layoutX="180.0" layoutY="140.0" prefHeight="27.0" prefWidth="198.0" style="-fx-border-color: #F45E0C;" />

        <!-- Champ pour la description -->
        <Label layoutX="50.0" layoutY="190.0" style="-fx-text-fill: #10888D;" text="Description:">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Label>
        <TextField fx:id="DescriptionTextField" layoutX="180.0" layoutY="190.0" prefHeight="120.0" prefWidth="198.0" style="-fx-border-color: #F45E0C;" />
        <!-- StackPane pour l'image et le symbole (+) -->
        <StackPane layoutX="400.0" layoutY="40.0">

            <!-- Label pour afficher le symbole (+) -->
            <Label style="-fx-text-fill: #F45E0C; -fx-font-size: 24px; -fx-font-weight: bold;" text="+" />
            <!-- ImageView pour afficher l'image du produit -->
            <ImageView fx:id="ImageViewProduit" fitHeight="127.0" fitWidth="181.0" style="-fx-border-color: #F45E0C;" />
        </StackPane>

        <!-- Bouton pour ajouter une image -->
        <Button fx:id="AjouterImageButton" layoutX="438.0" layoutY="186.0" onAction="#AjouterImageAction" style="-fx-background-color: #F45E0C; -fx-text-fill: #FFFFFF;" text="Ajouter Image">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Button>

        <!-- Bouton pour ajouter le produit -->
        <Button layoutX="186.0" layoutY="336.0" onAction="#AjoutAction" style="-fx-background-color: #10888D; -fx-text-fill: #FFFFFF;" text="Ajouter Produit">
         <font>
            <Font name="Copperplate Gothic Bold" size="13.0" />
         </font></Button>
    </children>
</AnchorPane>
