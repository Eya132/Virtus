<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionRegime.controller.Suivi.ModifierSuiviController" spacing="20" alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-padding: 20;" prefWidth="600" prefHeight="500">
    <!-- Titre -->
    <Label text="Modifier un Suivi" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0c666a; -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.2) , 5,0,0,1 );"/>

    <!-- Formulaire avec bordure -->
    <BorderPane style="-fx-border-color: #c74c0a; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-padding: 10;">
        <center>
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <!-- Contraintes pour les colonnes -->
                <columnConstraints>
                    <ColumnConstraints percentWidth="40" />
                    <ColumnConstraints percentWidth="60" />
                </columnConstraints>

                <!-- Poids -->
                <Label text="Poids :" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="poidsTextField" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Tour de taille -->
                <Label text="Tour de taille :" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="tourDeTailleTextField" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- IMC -->
                <Label text="IMC :" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="imcTextField" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" prefWidth="200" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Date de suivi -->
                <Label text="Date de suivi :" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateSuiviDatePicker" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" prefWidth="200" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>
        </center>
    </BorderPane>

    <!-- Boutons alignÃ©s horizontalement -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Modifier" fx:id="modifierSuiviButton" onAction="#modifierSuiviAction" style="-fx-background-color: #c74c0a; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 10 20; -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.2) , 5,0,0,1 );"/>
        <Button text="Annuler" fx:id="annulerButton" onAction="#handleAnnulerButton" style="-fx-background-color: #3d8b40; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 10 20; -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.2) , 5,0,0,1 );"/>
    </HBox>
</VBox>