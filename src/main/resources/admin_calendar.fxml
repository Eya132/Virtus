<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Priority?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminCalendarController" spacing="20" stylesheets="@styles/style5.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- Titre de la page -->
    <Label text="Calendrier des Matchs" styleClass="title">
        <font>
            <Font name="Segoe UI Bold" size="24" />
        </font>
    </Label>

    <!-- Barre de recherche et bouton de réinitialisation -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher par localisation..." styleClass="search-field" HBox.hgrow="ALWAYS" />
        <Button fx:id="resetFilterButton" text="Réinitialiser" styleClass="reset-button" />
    </HBox>

    <!-- Boutons supplémentaires -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button fx:id="statisticsButton" text="Voir les Statistiques" styleClass="statistics-button" />
        <Button fx:id="exportExcelButton" text="Exporter en Excel" styleClass="export-excel-button" />

    </HBox>

    <!-- Liste des matchs -->
    <ListView fx:id="matchList" styleClass="match-list" VBox.vgrow="ALWAYS">
        <VBox.vgrow>
            <Priority fx:constant="ALWAYS" />
        </VBox.vgrow>
    </ListView>
</VBox>