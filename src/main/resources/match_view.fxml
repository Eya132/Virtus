<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.UserDashboardController" stylesheets="@styles/style3.css" spacing="10" alignment="TOP_CENTER">
    <children>
        <!-- Title -->
        <Label text="Tableau de bord de l'utilisateur" styleClass="title-label" />

        <!-- Match Table -->
        <TableView fx:id="matchTable" prefHeight="400" prefWidth="700">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" />
                <TableColumn fx:id="heureColumn" text="Heure" />
                <TableColumn fx:id="localisationColumn" text="Localisation" />
                <TableColumn fx:id="terrainColumn" text="Terrain" />
                <TableColumn fx:id="typeSportColumn" text="Type de Sport" />
                <TableColumn fx:id="actionColumn" text="Actions">
                    <!-- Add Action Buttons to the Column -->
                    <cellFactory>
                        <!-- Vous pouvez ajouter des boutons ici si nÃ©cessaire -->
                    </cellFactory>
                </TableColumn>
            </columns>
        </TableView>
    </children>
</VBox>