<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PlanifierMatchController" spacing="15" alignment="CENTER" stylesheets="@styles/style1.css">
    <GridPane hgap="15" vgap="15">
        <!-- Date with DatePicker -->
        <Label text="Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <DatePicker fx:id="datePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Sélectionner la date" />

        <!-- Heure with input validation (HH:MM format) -->
        <Label text="Heure (HH:MM):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="heureField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="HH:MM" onKeyReleased="#onHeureChange"/>

        <!-- Heure de fin (readonly) -->
        <Label text="Heure de fin (HH:MM):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="heureFinField" GridPane.rowIndex="2" GridPane.columnIndex="1" editable="false" style="-fx-background-color: #e0e0e0;" promptText="Heure de fin" />

        <!-- Localisation with ComboBox (24 gouvernorats of Tunisia) -->
        <Label text="Localisation:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="localisationComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Sélectionner localisation"/>

        <!-- Terrain with ComboBox (dynamically filled based on localisation) -->
        <Label text="Terrain:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="terrainComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1" promptText="Sélectionner un terrain" editable="true"/>

        <!-- Nombre de personnes with ComboBox -->
        <Label text="Nombre de personnes:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="nbPersonneComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1" promptText="Sélectionner nombre de personnes" />

        <!-- Type de sport with ComboBox -->
        <Label text="Type de sport:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <ComboBox fx:id="typeSportComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1" promptText="Sélectionner type de sport" />

        <!-- Description (multiline input) -->
        <Label text="Description:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="7" GridPane.columnIndex="1" promptText="Ajouter une description" wrapText="true" />

        <!-- Static ID Utilisateur for testing -->
        <Label text="ID Utilisateur:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextField fx:id="idUserField" GridPane.rowIndex="8" GridPane.columnIndex="1" promptText="Entrez votre ID utilisateur"/>

    </GridPane>

    <!-- Planifier button -->
    <Button text="Planifier le match" onAction="#planifierMatch" styleClass="btn-primary"/>
</VBox>