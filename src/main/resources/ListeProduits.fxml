<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="680.0" prefWidth="961.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionBoutiqueONLINE.controllers.ListeProduitsController">
    <children>

        <!-- Bouton "Ajouter un produit" en haut à gauche -->
        <Button layoutX="50.0" layoutY="642.0" onAction="#ajouterProduitAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-min-width: 120; -fx-min-height: 30;" text="Ajouter un produit" />
        <Button layoutX="674.0" layoutY="642.0" onAction="#afficherStatistiques" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-min-width: 120; -fx-min-height: 30;" text="Afficher les statistiques" />

        <!-- Champ de recherche centré juste avant le tableau -->
        <TextField fx:id="searchField" layoutX="350.0" layoutY="10.0" promptText="Rechercher un produit..." style="-fx-font-size: 14px; -fx-pref-width: 300px;" />

        <!-- ListView pour afficher les suggestions (au-dessus du tableau) -->
        <ListView fx:id="suggestionsList" layoutX="350.0" layoutY="50.0" prefHeight="150.0" prefWidth="300.0" visible="false" />

        <!-- ScrollPane pour permettre le défilement du tableau -->
        <ScrollPane layoutY="195.0" prefHeight="446.0" prefWidth="951.0" style="-fx-background-color: transparent;">
            <content>
                <!-- TableView à l'intérieur du ScrollPane -->
                <TableView fx:id="produitTable" prefHeight="443.0" prefWidth="938.0">
                    <columns>
                        <!-- Colonne Référence -->
                        <TableColumn fx:id="refColumn" prefWidth="150.0" text="Référence">
                            <cellValueFactory>
                                <PropertyValueFactory property="refProduit" />
                            </cellValueFactory>
                        </TableColumn>
                        <!-- Colonne Nom -->
                        <TableColumn fx:id="nomColumn" prefWidth="171.99996334314346" text="Nom">
                            <cellValueFactory>
                                <PropertyValueFactory property="nomProduit" />
                            </cellValueFactory>
                        </TableColumn>

                        <!-- Colonne Prix -->
                        <TableColumn fx:id="prixColumn" prefWidth="78.4000244140625" text="Prix">
                            <cellValueFactory>
                                <PropertyValueFactory property="prixProduit" />
                            </cellValueFactory>
                        </TableColumn>

                        <!-- Colonne Quantité -->
                        <TableColumn fx:id="quantiteColumn" prefWidth="155.20004272460938" text="Quantité">
                            <cellValueFactory>
                                <PropertyValueFactory property="quantiteProduit" />
                            </cellValueFactory>
                        </TableColumn>

                        <!-- Colonne Image -->
                        <TableColumn fx:id="imageColumn" prefWidth="161.5999755859375" text="Image">
                            <cellValueFactory>
                                <PropertyValueFactory property="imageProduit" />
                            </cellValueFactory>
                        </TableColumn>

                        <!-- Colonne Actions (Update et Delete) -->
                        <TableColumn fx:id="actionsColumn" prefWidth="359.9998779296875" text="Actions">
                            <!-- Cette colonne sera gérée dans le contrôleur -->
                        </TableColumn>
                    </columns>
                </TableView>
            </content>
        </ScrollPane>
      <Button layoutX="577.0" layoutY="645.0" onAction="#exporterEnPDF"  mnemonicParsing="false" prefHeight="26.0" prefWidth="86.0" text="Exporter PDF" textFill="#3694b9" />
    </children>
</AnchorPane>
