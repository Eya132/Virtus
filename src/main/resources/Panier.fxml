<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GestionBoutiqueONLINE.controllers.PanierController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- TableView pour afficher les produits du panier -->
    <TableView fx:id="panierTableView" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <columns>
            <!-- Colonne pour l'image du produit -->
            <TableColumn fx:id="imageColumn" text="Image">
                <cellValueFactory>
                    <PropertyValueFactory property="imageProduit" />
                </cellValueFactory>
            </TableColumn>

            <!-- Colonne pour le nom du produit -->
            <TableColumn fx:id="nomColumn" text="Nom">
                <cellValueFactory>
                    <PropertyValueFactory property="nomProduit" />
                </cellValueFactory>
            </TableColumn>

            <!-- Colonne pour la description du produit -->
            <TableColumn fx:id="descriptionColumn" text="Description">
                <cellValueFactory>
                    <PropertyValueFactory property="descriptionProduit" />
                </cellValueFactory>
            </TableColumn>

            <!-- Colonne pour le prix du produit -->
            <TableColumn fx:id="prixColumn" text="Prix">
                <cellValueFactory>
                    <PropertyValueFactory property="prixProduit" />
                </cellValueFactory>
            </TableColumn>

            <!-- Colonne pour le bouton de suppression -->
            <TableColumn fx:id="supprimerColumn" text="Supprimer">
                <!-- Pas besoin de cellFactory ici, on le gère dans le contrôleur -->
            </TableColumn>

            <!-- Colonne pour le bouton de commande -->
            <TableColumn fx:id="commanderColumn" text="Commander">
                <!-- Pas besoin de cellFactory ici, on le gère dans le contrôleur -->
            </TableColumn>
        </columns>
    </TableView>

    <!-- Bouton "Passer commande" -->

</AnchorPane>