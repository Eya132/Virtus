<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestionRegime.controller.Suivi.AjouterSuivi" style="-fx-background-color: #FFFFFF; -fx-padding: 20;">
    <!-- Titre -->
    <Label text="Ajouter un Suivi" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0c666a; -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.2) , 5,0,0,1 );"/>

    <!-- Formulaire avec bordure -->
    <BorderPane style="-fx-border-color: #0c666a; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-padding: 10;">
        <center>
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <!-- ComboBox pour sélectionner un régime -->
                <Label text="Régime:" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="regimeComboBox" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- Champs pour afficher les détails du régime -->
                <Label text="Objectif:" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="objectifField" editable="false" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Calories journalières:" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="caloriesField" editable="false" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Protéines:" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="proteinesField" editable="false" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Glucides:" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="glucidesField" editable="false" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Lipides:" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="lipidesField" editable="false" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <!-- Champs pour ajouter un suivi -->
                <Label text="Poids (kg):" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="poidsField" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="Tour de Taille (cm):" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="tourDeTailleField" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Label text="IMC:" style="-fx-font-size: 14px; -fx-text-fill: #3d8b40;" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <TextField fx:id="imcField" style="-fx-background-color: #FFFFFF; -fx-border-color: #0c666a; -fx-border-radius: 5; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
            </GridPane>
        </center>
    </BorderPane>

    <!-- Bouton Ajouter -->
    <Button text="Ajouter" onAction="#handleAjouterSuivi" style="-fx-background-color: #c74c0a; -fx-text-fill: #FFFFFF; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 10 20; -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.2) , 5,0,0,1 );"/>
</VBox>